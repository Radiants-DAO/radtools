{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist/cli",
    "rootDir": "src/cli",
    "declaration": true
  },
  "include": ["src/cli/**/*"],
  "exclude": ["node_modules"]
}
